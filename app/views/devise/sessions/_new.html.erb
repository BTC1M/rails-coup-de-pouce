<div class="form-for-sess">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs-ss align-middle my-3">
    <div class="d-flex mb-2 flex-wrap">
      <div class="emailss mr-1">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    label: false,
                    placeholder: "email" %>
      </div>
      <div class="passwordss mr-2">
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    label: false,
                    placeholder: "password" %>
      </div>
      <div class="form-actions-ss">
        <%= f.button :submit, "Log in", class:'btn-session' %>
      </div>
    </div>
    <div class="d-flex flex-wrap justify-content-center mt-2">
      <div class="remember mr-2 align-self-center px-2 py-1">
        <%= f.input :remember_me, class: 'me', as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="btn-forgot d-flex align-self-center">
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'btn btn-light' %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
</div>
