<div class="login col-12 col-sm-9 col-md-6 col-lg-3 shadow p-3 mb-5 bg-white rounded">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs d-flex flex-column">
    <div class="inscrire mb-3 text-center justify-content-center">
      <p>s'inscrire</p>
    </div>
    <div class="mb-3">
      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "first name" },
                  label: false,
                  placeholder: "first name" %>
    </div>
    <div class="mb-3">
      <%= f.input :last_name,
                  required: true,
                  input_html: { autocomplete: "last name" },
                  label: false,
                  placeholder: "last name"%>
    </div>
    <div class="mb-3">
      <%= f.input :birthday, as: :date, start_year: Date.today.year - 90,
                  end_year: Date.today.year - 1,
                  order: [:year, :month, :day],
                  required: true,
                  label: false %>
    </div>
    <div class="mb-3">
    <%= f.input :email,
                required: true,
                input_html: { autocomplete: "email" },
                label: false,
                placeholder: "email"%>
    </div>
    <div class="mb-3">
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" },
                  label: false,
                  placeholder: "password" %>
    </div>
    <div class="mb-3">
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" },
                  label: false,
                  placeholder: "password_confirmation" %>
    </div>
  </div>
    <div class="form-actions col-12 col-sm-9 col-md-6 col-lg-3 mb-2">
      <%= f.button :submit, "S'enregistrer", class:'btn btn-primary btn-block' %>
    </div>
<% end %>
</div>
