<div class="header", style="background-image: linear-gradient(270.9deg, rgba(189, 50, 62, 0.19) 40.6%, rgba(238, 190, 88, 0.14) 71.3%), url(<%= asset_path('undraw_co-workers_ujs6.svg') %>);">
  <div class="container d-flex">
    <div class="form text-center mt-2">
    </div>
  </div>
</div>

<button class='dps'><%= link_to 'Déposer', new_mission_path %></button>
<button class='rcc'><%= link_to 'Rechercher', missions_path %></button>

<h3 class="mt-2">En cours</h3>
<div class="my_missions">
  <p><strong>Missions créées :</strong></p>
  <ul>
    <% current_user.missions.each do |mission| %>
      <li>
        <%= link_to mission.title, mission_path(mission.id) %>
        <%= link_to(mission_path(mission.id)) do %>
          <i style="margin-right: 0.5em; color: rgb(0,0,0);" class='far fa-eye'></i>
        <% end %>
        <%= link_to(edit_mission_path(mission.id)) do %>
          <i style="margin-right: 0.5em; color: rgb(0,0,0);" class='far fa-edit'></i>
        <% end %>
        <%= link_to(mission_path(mission.id), method: :delete, data: { confirm: "Are you sure?" }) do %>
          <i style="margin-right: 0.5em; color: rgb(0,0,0);" class='far fa-trash-alt'></i>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

<div class="my_participations mt-3">
  <p><strong>Participations à effectuer :</strong></p>
  <ul>
    <% current_user.participations.each do |participation| %>
      <li>
        <%= link_to participation.mission.title, mission_path(participation.mission.id) %>
        <%= link_to(mission_path(participation.mission.id)) do %>
          <i style="margin-right: 0.5em; color: rgb(0,0,0);" class='far fa-eye'></i>
        <% end %>
        <%= link_to(mission_participation_path(participation.mission.id, participation.id), method: :delete, data: { confirm: "Are you sure?" }) do %>
          <i style="margin-right: 0.5em; color: rgb(0,0,0);" class='far fa-trash-alt'></i>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

<%#= link_to 'Rechercher une mission', missions_path, class: "btn btn-primary" %>
<%#= link_to 'Déposer une mission', new_mission_path, class: "btn btn-success" %>

