<div class="header">
  <div class="container d-flex">
    <h1 text-align>coup <br>
      de <br>
    pouce</h1>
    <div class="form text-center mt-2">
      <% if current_user == nil %>
        <%= render "devise/sessions/new" %>
      <% end %>
    </div>
  </div>
</div>

<% if current_user != nil %>
  <p><%= link_to 'Déposer', dashboard_path %></p>
  <p><%= link_to 'Rechercher', dashboard_path %></p>
  <p><%= current_user.first_name %>, you are log in.</p>
  <p><%= link_to 'Sign out', destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' } %> or go to <%= link_to "your dashboard", dashboard_path %></p>
<% else %>
  <p><%= link_to 'Déposer', new_user_registration_path %></p>
  <p><%= link_to 'Rechercher', new_user_registration_path %></p>
  <%= render "devise/registrations/new" %>
<% end %>
