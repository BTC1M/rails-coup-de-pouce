<h1> Détail de la mission </h1>

<div class="card border-danger mb-3" style="width: 18rem;">
  <div class="card-body text-danger">
    <h5 class="card-title"><%= @mission.title %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%=@mission.category  %></h6>
    <p class="card-text">
      <p> Description: <%= @mission.description %></p>
      <p> Prix: <%=@mission.reward %>€</p>
      <p> Nombre: <%=@mission.number_of_participants%> personne </p>
      <p> Adresse: <%=@mission.place  %></p>
      <p> De <%=@mission.start_date.to_date %> à <%=@mission.end_date.to_date%></p>
    </p>
    <a href="#" class="btn btn-primary">Rejoindre</a>
  </div>
  <div class="card-footer text-muted">
    Last updated 2 days ago
  </div>
</div>

<div class="container">
  <% @mission.number_of_participants.times do %>
    <div class="card">

    </div>
  <% end %>
</div>

<p></p>
<%= link_to "<< Retour",  missions_path, class: "btn btn-outline-secondary"%>

