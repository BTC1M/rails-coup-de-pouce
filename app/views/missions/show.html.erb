<div class="header_dash d-flex justify-content-between px-4 align-items-center", style="background-image: linear-gradient(90deg, rgba(241, 191, 78, 0.35) 0%, rgba(241, 102, 71, 0.35) 41.61%, rgba(189, 50, 62, 0.59) 79.9%), url(<%= asset_path('undraw_co-workers_ujs6.svg') %>);">
      <div>
        <%= link_to(dashboard_path) do %>
          <p class="logo_dash text-center"><%= image_tag "logoCOLO2.png", :size => "120x80"%></p>
        <% end %>
      </div>
      <div id="content">
        <h1 class="titre_cdp_dash align-items-center">COUP DE POUCE</h1>
      </div>
      <div class="border_avatar_nav p-1 align-items-center dropleft" style="height: 80px">
          <button class="avatar-very-large avatar-bordered dropdown-toggle" style="background-image: url(https://kitt.lewagon.com/placeholder/users/arthur-littm);width: 72px;height: 72px;background-size: cover;" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <%= link_to 'Profile', dashboard_path, class: "dropdown-item"%>
            <div class="dropdown-divider"></div>
            <%= link_to 'Dashboard', dashboard_path, class: "dropdown-item"%>
            <div class="dropdown-divider"></div>
            <%= link_to 'Sign out', destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item"%>
            <div class="dropdown-divider"></div>
            <%= link_to 'Home', root_path, class: "dropdown-item"%>
          </div>
      </div>


    <div class="form-ss text-center mt-2">
      <% if current_user == nil %>
        <%= render "devise/sessions/new" %>
      <% end %>
    </div>
</div>
<div class="d-flex">

  <div class=" d-flex flex-columns col-12 col-sm-10  col-md-8  col-lg-6  col-xl-6 pl-0">
  <h1 class="ml-3"> Détail de la mission </h1>
  <div class="card border-secondary mb-3 ml-3">
      <div class="card-body text-primary">
        <h5 class="card-title"><%= @mission.title %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%=@mission.category  %></h6>
        <p class="card-text">
          <p> Description: <%= @mission.description %></p>
          <p> Prix: <%=@mission.reward %>€</p>
          <p> Nombre: <%=@mission.number_of_participants%> personne </p>
          <p> Adresse: <%=@mission.place  %></p>
          <p> De <%=@mission.start_date.to_date %> à <%=@mission.end_date.to_date%></p>
        </p>
        <%= link_to "Modifier",  edit_mission_path(@mission), class: "btn btn-outline-warning mt-4"%>
        <%= link_to 'Supprimer', mission_path(@mission), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger mt-4" %>
      </div>
      <div class="card-footer text-muted">
        Last updated 2 days ago
      </div>
    </div>
  </div>
</div>
  <div class="cards d-flex col-12 col-sm-10  col-md-8  col-lg-6  col-xl-6">
    <% @mission.participations.each do |participation| %>
    <div class="card cards-participations mr-2 d-flex flex-column" style="width: 18rem;">
      <div class="border-avatar mx-auto mt-3 p-1">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/arthur-littm", class: "avatar-very-large text-center avatar-bordered", alt: "avatar-very-large" %>
      </div>
      <p class="mx-auto"><%= participation.user.first_name %></p>
    </div>
    <% end %>
    <% @nombre.times do %>
    <div class="card cards-participations mr-2 d-flex flex-column" style="width: 18rem;">
      <div class="border-avatar mx-auto mt-3 p-1">
        <%= image_tag "grey.jpg", class: "avatar-very-large text-center avatar-bordered", alt: "avatar-very-large", style: "width: 72px; height: 72px;" %>
      </div>
      <p class="mx-auto">?</p>
    </div>
    <% end %>
    <div class='col-1'>
      <div
        class="map-show"
        id="map"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
  <%# if @nombre > 0 %>
  <div class="col-12 col-sm-10  col-md-8  col-lg-6  col-xl-6">
    <%= link_to "Rejoindre!", mission_participations_path(@mission), method: :create, class: "btn btn-primary btn-block mt-4"%>
  </div>
  <%# end %>
</div>
 <p class="mt-3 ml-3"><%= link_to "Retour sur dashboard",  dashboard_path, class: "btn btn-outline-secondary"%></p>

